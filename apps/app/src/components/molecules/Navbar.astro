---
import Logo from "@/assets/icons/logo.svg";
import IconHome from "@/assets/icons/home.svg";
import IconProfile from "@/assets/icons/user.svg";
import NavbarLink from "@/components/atoms/NavbarLink.astro";
import BussinesIcon from "@/assets/icons/bussiness.svg";

interface NavLink {
	href: string;
	label: string;
	icon: any;
}

const navLinks: NavLink[] = [
	{ href: "/bussines", label: "Negocios", icon: BussinesIcon },
	{ href: "/profile", label: "Perfil", icon: IconProfile },
];

// Split links into two groups for left and right alignment
const leftLinks = navLinks.slice(0, Math.ceil(navLinks.length / 2));
const rightLinks = navLinks.slice(Math.ceil(navLinks.length / 2));
---

<nav>
	<!-- Menu -->
	<ul>
		{
			leftLinks.map((link) => (
				<NavbarLink
					href={link.href}
					label={link.label}
					icon={link.icon}
				/>
			))
		}
	</ul>

	<main>
		<a href="/">
			<Logo width={48} height={48} />
		</a>
	</main>

	<!-- Menu -->
	<ul>
		{
			rightLinks.map((link) => (
				<NavbarLink
					href={link.href}
					label={link.label}
					icon={link.icon}
				/>
			))
		}
	</ul>
</nav>

<style>
	nav {
		display: inline-flex;
		justify-content: center;
		align-items: center;
		padding: var(--spacing-sm) var(--spacing-lg);
		background-color: var(--primary);
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;
		z-index: 100;
		gap: var(--spacing-md);
	}

	nav main {
		aspect-ratio: 1 / 1;
		background-color: var(--primary-dark);
		border-radius: 50%;
		transition: transform var(--transition-duration);
		box-shadow: 0 6px 20px var(--shadow-color);
		z-index: 101;
		padding: 0.5rem;

		&:hover {
			transform: scale(1.1) translateY(-2px);
		}
	}

	ul {
		display: flex;
		flex: 1;
		justify-content: space-around;
		list-style: none;
		padding: 0;
		margin: 0;
	}
</style>
