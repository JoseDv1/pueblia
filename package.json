{
	"name": "guata-app",
	"version": "1.0.0",
	"description": "Monorepo with Bun, Hono + Prisma for API and Astro + Svelte + Alpine + GSAP for Frontend",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter apps/* dev",
		"dev:api": "bun run apps/api/src/index.ts --watch",
		"dev:web": "cd apps/web && bun run dev",
		"build": "bun run build:api && bun run build:web",
		"build:api": "cd apps/api && bun run build",
		"build:web": "cd apps/web && bun run build",
		"db:generate": "cd apps/api && bun run db:generate",
		"db:migrate": "cd apps/api && bun run db:migrate",
		"db:studio": "cd apps/api && bun run db:studio",
		"lint": "bunx oxlint@latest",
		"lint:fix": "bunx oxlint@latest --fix"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"prisma": "^6.9.0",
		"typescript": "^5"
	}
}
