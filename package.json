{
	"name": "guata-app",
	"version": "1.0.0",
	"description": "Monorepo with Bun, Hono + Prisma for API and Astro + Svelte + Alpine + GSAP for Frontend",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter apps/* dev",
		"dev:api": "bun run --hot apps/api/src/index.ts",
		"dev:web": "cd apps/web && bun run dev",
		"dev:app": "cd apps/app && bun run dev",
		"build": "bun run build:api && bun run build:web && bun run build:app",
		"build:api": "cd apps/api && bun run build",
		"build:web": "cd apps/web && bun run build",
		"build:app": "cd apps/app && bun run build",
		"db:generate": "cd packages/db && bunx prisma generate",
		"db:migrate": "cd packages/db && bunx prisma migrate dev",
		"db:studio": "cd packages/db && bunx prisma studio",
		"lint": "bun oxlint@latest",
		"lint:fix": "bun oxlint@latest --fix"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"prisma": "^6.12.0",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@prisma/client": "^6.12.0"
	}
}
